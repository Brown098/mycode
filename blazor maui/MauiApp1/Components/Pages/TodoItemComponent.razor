@using MauiApp1.Models

<div class="d-flex justify-content-between align-items-center">
    <div>
        <input type="checkbox"
               @bind="Item.Done"
               @bind:after="() => OnStatusChanged.InvokeAsync(Item)"
               class="me-2" />

        <span class="@(Item.Done ? "text-muted text-decoration-line-through" : "")">@Item.Title</span>
    </div>
    <button class="btn btn-sm btn-danger" @onclick="() => OnDelete.InvokeAsync(Item)">删除</button>
</div>

@code {
    [Parameter] public TodoItem Item { get; set; } = default!;
    [Parameter] public EventCallback<TodoItem> OnDelete { get; set; }
    [Parameter] public EventCallback<TodoItem> OnStatusChanged { get; set; }
}
